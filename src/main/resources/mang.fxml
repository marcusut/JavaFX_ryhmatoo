<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="gameBoard" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <children>
                <HBox spacing="10">
                    <children>
                        <Label text="Available Letters:" />
                        <FlowPane fx:id="availableLettersPane" /> <!-- Renamed to availableLettersPane -->
                    </children>
                </HBox>
                <HBox spacing="10">
                    <children>
                        <Label text="Drag letters here to form a word:" />
                        <HBox fx:id="wordBuilderPane" spacing="10" /> <!-- Renamed to wordBuilderPane -->
                    </children>
                </HBox>
                <HBox spacing="10">
                    <children>
                        <Button fx:id="submitButton" text="Submit" onAction="#submitWord" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>